{{ ansible_managed | comment('xml') }}

<Server port="8005" shutdown="SHUTDOWN">
    <Listener className="org.apache.catalina.startup.VersionLoggerListener"/>
    <Listener className="org.apache.catalina.core.AprLifecycleListener" SSLEngine="on"/>
    <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener"/>
    <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"/>
    <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener"/>

    <Service name="Catalina">
        {% if jira__catalina_connector_proxyname is defined and jira__catalina_connector_proxyname | length -%}
        <!--
        ==============================================================================================================
        {{ jira__catalina_connector_scheme | upper }} - Proxying Jira via Apache or Nginx over {{ jira__catalina_connector_scheme | upper }}

        See the following for more information:

            Apache - https://confluence.atlassian.com/x/4xQLM
            nginx  - https://confluence.atlassian.com/x/DAFmGQ
        ==============================================================================================================
        -->

        <Connector port="8080"
            relaxedPathChars="[]|"
            relaxedQueryChars="[]|{}^&#x5c;&#x60;&quot;&lt;&gt;"
            maxThreads="150"
            minSpareThreads="25"
            connectionTimeout="20000"
            enableLookups="false"
            maxHttpHeaderSize="8192"
            protocol="HTTP/1.1"
            useBodyEncodingForURI="true"
            redirectPort="8443"
            acceptCount="100"
            disableUploadTimeout="true"
            bindOnInit="false"
            secure="{{ (jira__catalina_connector_scheme | lower == "http") | ternary("false", "true") }}"
            scheme="{{ jira__catalina_connector_scheme | lower }}"
            proxyName="{{ jira__catalina_connector_proxyname }}"
            proxyPort="{{ jira__catalina_connector_proxyport }}"/>
        {% else -%}

        <!--
        ==============================================================================================================
        DEFAULT - Direct connector with no proxy for unproxied access to Jira.
        ==============================================================================================================
        -->

        <!-- Relaxing chars because of JRASERVER-67974 -->
        <Connector port="8080"
            relaxedPathChars="[]|"
            relaxedQueryChars="[]|{}^&#x5c;&#x60;&quot;&lt;&gt;"
            maxThreads="150"
            minSpareThreads="25"
            connectionTimeout="20000"
            enableLookups="false"
            maxHttpHeaderSize="8192"
            protocol="HTTP/1.1"
            useBodyEncodingForURI="true"
            redirectPort="8443"
            acceptCount="100"
            disableUploadTimeout="true"
            bindOnInit="false"/>
        {% endif %}

        <!--
        ==============================================================================================================
        AJP - Proxying Jira via Apache over HTTP or HTTPS

        If you're proxying traffic to Jira using the AJP protocol, uncomment the following connector line
        See the following for more information:

            Apache - https://confluence.atlassian.com/x/QiJ9MQ
        ==============================================================================================================
        -->

        <!--
        <Connector port="8009" URIEncoding="UTF-8" enableLookups="false" protocol="AJP/1.3"/>
        -->

        <Engine name="Catalina" defaultHost="localhost">
            <Host name="localhost" appBase="webapps" unpackWARs="true" autoDeploy="true">

                <Context path="" docBase="${catalina.home}/atlassian-jira" reloadable="false" useHttpOnly="true">
                    <Resource name="UserTransaction" auth="Container" type="javax.transaction.UserTransaction"
                              factory="org.objectweb.jotm.UserTransactionFactory" jotm.timeout="60"/>
                    <Manager pathname=""/>
                    <JarScanner scanManifest="false"/>
                    <Valve className="org.apache.catalina.valves.StuckThreadDetectionValve" threshold="120" />
                </Context>

            </Host>
            <Valve className="org.apache.catalina.valves.AccessLogValve"
                   pattern="%a %{jira.request.id}r %{jira.request.username}r %t &quot;%m %U%q %H&quot; %s %b %D &quot;%{Referer}i&quot; &quot;%{User-Agent}i&quot; &quot;%{jira.request.assession.id}r&quot;"/>
        </Engine>
    </Service>
</Server>
